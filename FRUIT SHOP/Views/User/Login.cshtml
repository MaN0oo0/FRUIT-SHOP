@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}


@model Users

<form class="mt-3 vh-90 col-md-6" asp-action="Login" asp-controller="User" method="post">

    @{if (ViewBag.clas == "true")
        {
            <div class="bg-danger text-white p-1 d-flex justify-content-between align-items-center  err p-3  " style="border-radius:10px" >
                <a class="btn" style="border:1px solid #eee; outline:none;background-color:transparent;color:white; cursor:pointer  " id="btn_x">X</a>
                <p class="p-3"> @ViewBag.error</p>

            </div>
        }
    }
    <!-- Email input -->
    <div class="form-outline mb-4 mt-2">
        <input type="email" id="form2Example1" class="form-control" asp-for="Email" />
        <label class="form-label" for="form2Example1">Email address</label>
        <span asp-validation-for="Email" class="text-danger fw-bold p-2"></span>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input type="password" id="form2Example2" class="form-control" asp-for="Password" />
        <label class="form-label" for="form2Example2">Password</label>
        <span asp-validation-for="Password" class="text-danger fw-bold p-2"></span>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
        </div>

        <div class="col">
            <!-- Simple link -->
            <a href="#!">Forgot password?</a>
        </div>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a asp-action="Register" asp-controller="User">Register</a></p>
        <p>or sign up with:</p>
        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-facebook-f"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-google"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-twitter"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-github"></i>
        </button>
    </div>
</form>

@section Scripts{
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        var btn = document.querySelector(".err #btn_x");
        btn.onclick = function () {
            this.parentElement.style.visibility="hidden";

        };
    </script>
}