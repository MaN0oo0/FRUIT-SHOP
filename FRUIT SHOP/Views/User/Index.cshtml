
@{
    ViewData["Title"] = "Index";

}

@model List<Users>
<h1 class="badge badge-info badge-pill rounded">List Of User</h1>


<div class="container mt-4">
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>IsAdmin</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


            <tr>
                <td>@item.Name</td> 
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.IsAdmin</td>
                <td>
                    <a  class="btn btn-outline-danger " style="cursor:pointer" asp-action="Delete" asp-controller="User"  onclick="return confirm('are you sure to delete ')" asp-route-Id="@item.Id" ><i class="fa-solid fa-trash-can"></i></a>
                    <a class="btn btn-outline-primary " style="cursor:pointer" asp-action="Update" asp-route-Id="@item.Id" asp-controller="User"><i class="fa-solid fa-edit"></i></a>
                
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
