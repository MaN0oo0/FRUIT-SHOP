
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/MainLayouts/CustomLayout.cshtml";
}
@model Users

<div class="container col-md-6">
    <form asp-action="Delete" asp-controller="User" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="col">
            <label class="form-label">@Model.Name</label>

        </div>
        <div class="col">
            <label class="form-label">@Model.Email</label>

        </div>
        <div class="col">
            <center>
                <input  class="btn btn-danger btn-sm" type="submit" value="Delete"/>
                <a class="btn btn-info btn-sm" asp-action="Update" asp-controller="User" asp-route-Id="@Model.Id">Update</a>
                <a class="btn btn-primary btn-sm" asp-action="Index" asp-controller="User" >Return</a>
            </center>

        </div>
    </form>

</div>