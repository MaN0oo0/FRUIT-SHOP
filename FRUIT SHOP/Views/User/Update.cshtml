

@{
    ViewData["Title"] = "UpdateConfirm";
    Layout = "~/Views/MainLayouts/CustomLayout.cshtml";
  
   

}
@model Users
<h1>UpdateConfirm</h1>
<div class="container col-md-8">
    <form asp-action="Update" asp-controller="User">
        <input type="hidden" asp-for="Id" />
        <div class="col">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger fw-bold "></span>
        </div>
        <div class="col">
            <label class="form-label">Email</label>
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger fw-bold "></span>
        </div>
        <div class="col">
            <label class="form-label">Phone Number</label>
            <input class="form-control" type="text" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger fw-bold "></span>
        </div>
        <div class="col">
            <center>
                <input class="btn btn-info btn-sm" type="submit" value="Update" />
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="User" asp-route-Id="@Model.Id">Delete</a>
          


            </center>

        </div>
    </form>
</div>
