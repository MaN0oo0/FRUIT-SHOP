
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/MainLayouts/CustomLayout.cshtml";
    Users data = ViewBag.user;

}

@model ContactUs
<!-- contact section -->
<section class="contact_section layout_padding">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-lg-2 col-md-10 offset-md-1">
                <div class="heading_container">
                    <hr>
                    <h2>
                        Request A call back
                    </h2>
                </div>
            </div>
        </div>

        <div class="layout_padding2-top">
            <div class="row">
                <div class="col-lg-4 offset-lg-2 col-md-5 offset-md-1">
                    <form asp-action="ContactUs" asp-controller="Admin" method="post">
              
	
		 

                        <input type="hidden" asp-for="@data.Id" />
             
                        <div class="contact_form-container">
                            <div>
                                <div>
                                    <input type="text" placeholder="Full Name" asp-for="@data.Name" />
                                </div>
                                <div>
                                    <input type="email" placeholder="Email" asp-for="@data.Email" />
                                </div>
                                <div>
                                    <input type="text" placeholder="Phone Number" asp-for="@data.PhoneNumber" />
                                </div>
                                <div>
                                    <input type="text" class="message_input" placeholder="Message" asp-for="Message" />
                                </div>
                                <div>
                                    <button type="submit">
                                        Send
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6 px-0">
                    <div class="map_container">
                        <div class="map-responsive">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end contact section -->